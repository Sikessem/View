{
  "type": "module",
  "name": "@sikessem/view",
  "description": "A modern, minimal, and powerful template engine for combining HTML, CSS, and JS/TS into clean, reusable, and maintainable .vw files. Inspired by Blade and JSX, built for Sikessem but compatible with any ecosystem.",
  "keywords": [
    "template",
    "engine",
    "view",
    "sikessem",
    "templating",
    "jsx",
    "blade",
    "html",
    "css",
    "javascript",
    "typescript",
    "vw"
  ],
  "author": "Sigui Kess√© Emmanuel <siguici@proton.me>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sikessem/view"
  },
  "bugs": {
    "url": "https://github.com/sikessem/view/issues"
  },
  "homepage": "https://sikessem.github.io/packages/view",
  "private": true,
  "engines": {
    "bun": ">=1.2"
  },
  "packageManager": "bun@1.2.9",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "concurrently vite vitest",
    "start": "vite --open",
    "build": "tsc && vite build",
    "serve": "vite preview --open",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint \"app/**/*.ts*\"",
    "lint.base": "eslint . --ext .ts,.js --fix",
    "test": "bun test:lint && bun test:fmt && bun test:unit",
    "test:unit": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:fmt": "prettier --check .",
    "test:lint": "eslint . --ext .ts,.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.4",
    "@types/compression": "^1.7.5",
    "@types/eslint": "9.6.1",
    "@types/express": "5.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "autoprefixer": "10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-qwik": "1.13.0",
    "jsdom": "^26.1.0",
    "node-fetch": "3.3.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "^3.1.1"
  }
}
