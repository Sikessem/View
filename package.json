{
  "name": "rangular",
  "description": "Recreate Angular From Scratch.",
  "private": true,
  "engines": {
    "node": "^16.0.0 || >=18.0.0"
  },
  "packageManager": "pnpm@7.25.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "concurrently vite vitest",
    "start": "vite --open",
    "build": "tsc && vite build",
    "serve": "vite preview --open",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"app/**/*.ts*\"",
    "lint.base": "eslint . --ext .ts,.js --fix",
    "test": "pnpm test.lint && pnpm test.fmt && pnpm test.unit",
    "test.unit": "vitest run",
    "test.cov": "vitest run --coverage",
    "test.fmt": "prettier --check .",
    "test.lint": "eslint . --ext .ts,.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.9",
    "@types/compression": "^1.7.2",
    "@types/eslint": "8.4.10",
    "@types/express": "4.17.16",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.18",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.49.0",
    "autoprefixer": "10.4.13",
    "concurrently": "^7.6.0",
    "cssnano": "^5.1.14",
    "eslint": "8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^32.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-qwik": "0.16.2",
    "jsdom": "^21.1.0",
    "node-fetch": "3.3.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-nested": "^6.0.0",
    "prettier": "^2.8.3",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-tsconfig-paths": "4.0.5",
    "vitest": "^0.28.2"
  }
}
